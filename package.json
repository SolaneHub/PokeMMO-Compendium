{
  "name": "pokemmocompendium",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://pokemmo-compendium.web.app/",
  "scripts": {
    "dev": "vite",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,json,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"src/**/*.css\"",
    "lint:style:fix": "stylelint \"src/**/*.css\" --fix",
    "validate": "cross-env NODE_OPTIONS='--pending-deprecation' npm run type-check && npm run lint && npm run lint:style && npm run format:check",
    "build": "npm run type-check && vite build && node -e \"require('fs').copyFileSync('dist/index.html', 'dist/404.html')\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.3.1",
    "firebase": "12.9.0",
    "lucide-react": "0.564.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "7.13.0",
    "tailwindcss": "^4.1.18",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/crypto-js": "4.2.2",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "cross-env": "10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vite": "7.3.1",
    "vite-plugin-pwa": "^1.2.0"
  }
}
