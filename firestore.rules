rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL ADMIN RULE ---
    // Allows admins to read/write ANY document in the database.
    // This overrides/complements specific rules below.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Users collection: only the authenticated user can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Elite Four Teams subcollection
    match /users/{userId}/elite_four_teams/{teamId} {
      allow read: if request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.uid == userId ||
        (resource.data.status == 'approved' && resource.data.isPublic == true)
      );
      allow write: if request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.uid == userId
      );
    }

  }
}
